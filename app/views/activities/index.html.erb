<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Activity description</th>
      <th>Date</th>
      <th>Hours</th>
      <th>Note</th>
      <th>User</th>
      <th>Client</th>
      <th>Project</th>
      <th>Billable</th>
      <th>Posted</th>
      <th>Posted date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_description %></td>
        <td><%= activity.date %></td>
        <td><%= activity.hours %></td>
        <td><%= activity.note %></td>
        <td><%= activity.user %></td>
        <td><%= activity.client %></td>
        <td><%= activity.project %></td>
        <td><%= activity.billable %></td>
        <td><%= activity.posted %></td>
        <td><%= activity.posted_date %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

