<%- model_class = Activity -%>
<div class="page-header">
  <h1><%=t '.title', :default => Activity %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:activity_description) %></dt>
      <dd><pre class="prettyprint"><%= @activity.activity_description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date) %></dt>
      <dd><pre class="prettyprint"><%= @activity.date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hours) %></dt>
      <dd><pre class="prettyprint"><%= @activity.hours %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:note) %></dt>
      <dd><pre class="prettyprint"><%= @activity.note %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:billable) %></dt>
      <dd><pre class="prettyprint"><%= @activity.billable %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:posted) %></dt>
      <dd><pre class="prettyprint"><%= @activity.posted %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:posted_date) %></dt>
      <dd><pre class="prettyprint"><%= @activity.posted_date %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              activities_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_activity_path(@activity), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              activity_path(@activity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

