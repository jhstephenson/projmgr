<%= form_for @client, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :client_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :client_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_1, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address_1, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_2, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address_2, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :city, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :state, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zip_code, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :zip_code, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :contact_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact_email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.email_field :contact_email, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact_phone, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :contact_phone, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :internal_account_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :internal_account_number, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :default_billing_rate, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :default_billing_rate, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  clients_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
