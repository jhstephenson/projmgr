<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t '.title', :default => Client %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:client_name) %></dt>
      <dd><pre class="prettyprint"><%= @client.client_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address_1) %></dt>
      <dd><pre class="prettyprint"><%= @client.address_1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address_2) %></dt>
      <dd><pre class="prettyprint"><%= @client.address_2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @client.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state) %></dt>
      <dd><pre class="prettyprint"><%= @client.state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:zip_code) %></dt>
      <dd><pre class="prettyprint"><%= @client.zip_code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contact_name) %></dt>
      <dd><pre class="prettyprint"><%= @client.contact_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contact_email) %></dt>
      <dd><pre class="prettyprint"><%= @client.contact_email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contact_phone) %></dt>
      <dd><pre class="prettyprint"><%= @client.contact_phone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:internal_account_number) %></dt>
      <dd><pre class="prettyprint"><%= @client.internal_account_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:default_billing_rate) %></dt>
      <dd><pre class="prettyprint"><%= @client.default_billing_rate %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clients_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_client_path(@client), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

