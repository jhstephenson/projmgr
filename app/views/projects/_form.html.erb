<%= form_for @project, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :project_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :project_name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :client_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :client_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :started, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :started, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :completed, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :completed, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :type_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estimated_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :estimated_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :actual_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :actual_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :billing_rate, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :billing_rate, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  projects_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
